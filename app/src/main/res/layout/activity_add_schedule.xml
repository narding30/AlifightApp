<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Activities.AddScheduleActivity">

    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnExitSched"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:drawableStart="@drawable/cancelbtn"
            android:background="@color/transparent"
            android:layout_width="35dp"
            android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/IVImageSession"
        android:scaleType="fitXY"
        android:src="@drawable/qq"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


        <Button
            android:id="@+id/btnEditSched"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/camera"
            android:background="#93cccccc"
            android:text="edit"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

    </FrameLayout>


    <TextView
        android:textStyle="bold"
        android:id="@+id/TVSessionName"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Boxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:text="Session Capacity"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TVSessionCap"
                android:text="20"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Sessions Per Week"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/TVSessionsPerWeek"
                android:text="4"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/BTNAddSchedule"
        android:layout_marginBottom="10dp"
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:text="Add schedule"
        android:background="@color/colorYellow"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerSetSched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>