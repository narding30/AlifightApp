<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    tools:ignore="MissingPrefix"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/white"
            android:id="@+id/btnAttend"
            android:clickable="false"
            android:paddingRight="10dp"
            android:drawableEnd="@drawable/arts1"
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/arts2"
            android:text="Attend Session"
            android:textSize="20dp"
            fontPath="fonts/RobotoCondensed-Regular.ttf"
            android:textAlignment="center"
            android:background="@color/black"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <FrameLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TVSessionNameFS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muay Thai"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVInstructorNameFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Philip Mandi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TVSessionDayFS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textSize="16dp" />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Start"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/TVSessionStartFS"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1:00 PM"
                android:textSize="16dp" />
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session End"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/TVSessionEndFS"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3:00 PM"
                android:textSize="16dp" />
        </LinearLayout>


        <ImageView
            android:src="@drawable/background"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:layout_width="130dp"
            android:layout_height="130dp" />
    </FrameLayout>
        <TextView
            fontPath="fonts/Lato-Bold.ttf"
            android:text="ATTENDEES"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <Button
        android:id="@+id/BTNAttendees"
        android:clickable="false"
        android:paddingRight="10dp"
        android:drawableEnd="@drawable/arts1"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/arts2"
        android:text="22/25"
        android:textSize="25dp"
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        android:textAlignment="center"
        android:background="@color/colorYellow"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </LinearLayout>
</android.support.v7.widget.CardView>