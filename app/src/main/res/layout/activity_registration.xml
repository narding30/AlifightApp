<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:background="@color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/btnBackRegUser"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.Toolbar>
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBarRegUser"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            app:mpb_progressStyle="horizontal"
            android:visibility="invisible"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                fontPath="fonts/Lato-Bold.ttf"
                android:text="Please Fill in the Following fields"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix" />

            <RadioGroup
                android:paddingLeft="55dp"
                android:id="@+id/rgGenderUser"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbMaleUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/rbFemaleUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="@android:color/black" />

            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Last Name"
                    android:id="@+id/tvLastNameUser"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="First Name"
                    android:id="@+id/tvFirstNameUser"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Middle Name"
                    android:id="@+id/tvMiddleNameUser"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Age"
                    android:id="@+id/tvage"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Address"
                    android:id="@+id/tvaddress"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Occupation"
                    android:id="@+id/Occupation"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Email"
                    android:id="@+id/etemail"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="6dp"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:hint="Password"
                    android:id="@+id/etpass"
                    android:textColorHint="@android:color/black"
                    android:textColor="@color/colorYellow"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:textSize="17dp"
                android:id="@+id/btnRegisterUser"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_background_2"
                android:text="Next"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/RobotoCondensed-Regular.ttf"
                tools:ignore="MissingPrefix" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>