<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coach.Activities.DetailedSched">

    <ImageView
        android:id="@+id/IVDetailedSession"
        android:scaleType="fitXY"
        android:src="@drawable/qq"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/TVDetailedSName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Muay Thai"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/TVDetailedSInstruct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Philip Mandi"
        android:textAlignment="center"
        android:textColor="#152f6b" />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/round_corners"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Time Start"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVDetailedTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1:00 PM"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Time End"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVDetailedTimeEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="3:00 PM"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Session Capacity"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVDetailedSesCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1:00 PM"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Session Per Week"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVDetailedSesPerWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="3:00 PM"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        fontPath="fonts/Lato-Bold.ttf"
        android:textSize="23dp"
        android:layout_marginTop="5dp"
        android:text="ATTENDEES"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/colorYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/DetailedBTNAttendees"
        android:clickable="false"
        android:paddingRight="10dp"
        android:drawableEnd="@drawable/arts1"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/arts2"
        android:text="22"
        android:textSize="25dp"
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        android:textAlignment="center"
        android:background="@color/colorYellow"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/DetailedrecyclerViewAttendees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>